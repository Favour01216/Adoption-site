  <div class="row">
        {{#if admin}}
        <div class="col-md-6">
          <h2>Add A Pet!</h2>
      
          <form class="form pet-form" id="submit-form">
            <div>
              <label for="new-pet">Pet name:</label>
              <input class="pet-form-input" type="text" id="name" placeholder="Lucky"/>
            </div>
            <div class="form-group">
                <label for="sex">Sex:</label>
                <select name="sex" id="sex-dropdown">
                  <option value="female">Female</option>
                  <option value="male">Male</option>
                </select>
            </div>
            <div class="form-group">
                <label for="species">Species:</label>
                <select name="species" id="species-dropdown">
                  <option value="dog">Dog</option>
                  <option value="cat">Cat</option>
                </select>
            </div>
            <div class="form-group">
              <label for="new-pet">Breed:</label>
              <input class="pet-form-input" type="text" id="breed" placeholder="Husky"/>
            </div>
            <div class="form-group">
              <label for="new-pet">Description</label>
              <textarea class="pet-form-input" type="text" id="description"></textarea>
            </div>
            <div class="form-group">
              <label for="new-pet">Image</label>
              <input type="file" id="image" name="image-browse">
            </div>
            <div class="form-group">
              <button class="btn btn-primary" type="submit" id="submit-button">Submit</button>
            </div>
          </form>
          {{else}}
          <h1>Please log in as an administrator to add a new pet.</h1>
        {{/if}}
        </div>

<script src="./js/newPet.js"></script>
