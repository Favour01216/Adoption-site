<h1>All Available Pets</h1>
{{#each pets as |pet| }}
<div class="row mb-4 pet">
  <div class="col-md-5">
    <h2>
      <a href="/pets/{{pet.id}}">{{pet.name}}</a>
    </h2>
      <img src={{pet.image}}>
    {{#if logged_in}}
    <p>Species:{{pet.species}} </p>
    <p>Sex: {{pet.sex}} </p>
    <p>Age: {{pet.age}}</p>
    <p>Breed: {{pet.breed}} </p>
  </div>
  <div id="description" class="col-md-7">
    <p>
      {{pet.description}}
    </p>
    {{/if}}
  </div>
</div>
{{/each}}
