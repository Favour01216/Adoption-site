<h1>All Available Pets</h1>
{{#each pets as |pet| }}
<div class="row mb-4 project">
    <div class="col-md-3">
        {{!-- add image here --}}
    </div>
  <div class="col-md-5">
    <h2>
      <a href="/project/{{pet.id}}">{{pet.name}}</a>
    </h2>
    <p>Species: {{pet.species}} </p>
    <p>Sex: {{pet.sex}} </p>
    <p>Age: {{pet.age}}</p>
    <p>Breed: {{pet.breed}} </p>
  </div>
  <div class="col-md-7">
    <p>
      {{pet.description}}
    </p>
  </div>
</div>
{{/each}}
