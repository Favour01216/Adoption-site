<div class="text-center">
  {{#if logged_in}}
    <h2>{{{name}}} 
      {{#if isCat}}
      <span role="img">🐱</span>
      {{else}}
      <span role="img">🐶</span>
      {{/if}}
    </h2>
    <section id ="pets-page">
      <p>Sex: {{{sex}}}</p>
      <p>Age: {{{age}}}</p>
      <p>Species: {{{species}}}</p>
      <p>Breed: {{{breed}}}</p>
      <img src={{image}}>
      <section id="description-box">
        <p>About {{{name}}}:</p>
        <p>{{{description}}}</p>
      </section>
    <p>
      <button class="btn btn-primary">Adopt This Pet!</button>
    </p>
    </section>
  {{else}}
    <h1 id="login-redirect"> Please log in to view pet details. </h1>
    <br>
    <br>
    <br>
    <a href="/login" class="btn btn-primary">Log in here!</a>
  {{/if}}
</div>
