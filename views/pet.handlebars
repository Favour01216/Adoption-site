<div class="text-center">
  {{#if logged_in}}
    <h2>{{{name}}}</h2>
    <img>
    <p>Sex: {{{sex}}}</p>
    <p>Age: {{{age}}}</p>
    <p>Species: {{{species}}}</p>
    <p>Breed: {{{breed}}}</p>
    <section id="description-box">
      <p>About {{{name}}}:</p>
      <p>{{{description}}}</p>
    </section>
    <p>
      <button class="btn btn-primary">Adopt This Pet!</button>
    </p>
  {{else}}
    <h1> Please log in to view pet details. </h1>
    <br>
    <br>
    <br>
    <a href="/login">Log in here!</a>
  {{/if}}
</div>
